<h1><%= @team.city %> <%= @team.name %></h1>

<h3>Rhubarbs</h3>
<table>
  <tr>
    <th>Date</th>
    <th>Game</th>
    <th>Description</th>
  </tr>

  <% @team.fights.order(:date_occurred).each do |fight| %>
    <tr>
      <td><%= link_to fight.date_occurred.strftime("%B %d, %Y"), fight_path(fight) %></td>
      <td><%= fight.away_team.abbreviation %> @ <%= fight.home_team.abbreviation %></td>
      <td><%= fight.description %></td>
    </tr>
  <% end %>
</table>