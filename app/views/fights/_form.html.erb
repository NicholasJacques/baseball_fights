<%= form_for [ @fight ] do |f| %>
  <%= f.label :embed_url %>
  <%= f.text_field :embed_url%>
  <br/>
  <%= f.label :date_occurred %>
  <%= f.date_field :date_occurred%>
  <br/>
  <%= f.label :description %>
  <%= f.text_area :description%>
  <br/>
  <%= f.label :home_team %>
  <%= f.collection_select(:home_team_id, @teams, :id, :name) %> 
  <br/>
  <%= f.label :away_team %>
  <%= f.collection_select(:away_team_id, @teams, :id, :name) %> 
  <br/>
  <%= f.submit "Submit" %>
<% end %>